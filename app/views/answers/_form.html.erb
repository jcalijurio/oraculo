<div id="messageOwner">
  <%= image_tag "avatar.png" %>
</div>

<div id="messageBody">
  <%= form_for(@answer) do |f| %>
    <%= f.error_messages %>

    <div class="field">
      <%= f.label :body, "Give your answer bellow:" %><br />
      <%= f.text_area :body, rows: 10, cols: 60 %>
    </div>

    <div class="actions">
      <%= submit_button %> or <%= link_to_cancel %>
    </div>
  <% end %>
</div>

<%= clearfix %>

